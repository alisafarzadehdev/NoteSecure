<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/one</item>
        <item name="colorPrimaryVariant">@color/twe</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="textstyles" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#121314</item>
    </style>
    <style name="textstylesWhite" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/iransans</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#f0f0f0</item>
    </style>
</resources>